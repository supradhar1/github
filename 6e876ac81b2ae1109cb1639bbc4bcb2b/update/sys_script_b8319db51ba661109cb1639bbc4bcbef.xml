        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {
  var amount = current.getValue('amount');
  var currency = current.getValue('currency');
  var exchangeRate = 1.0; // default exchange rate is 1.0
  
  if (currency == 'CHF') {
    exchangeRate = 1.1; // CHF to USD exchange rate
  } else if (currency == 'EUR') {
    exchangeRate = 1.2; // EUR to USD exchange rate
  }
  
  var usdAmount = amount * exchangeRate;
  current.setValue('u_currency_1', usdAmount);
})(current, previous);
]]></script>
