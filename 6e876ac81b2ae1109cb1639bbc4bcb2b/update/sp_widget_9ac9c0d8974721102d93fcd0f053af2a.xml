        <template><![CDATA[<!DOCTYPE html>
<html>
  <head>
    <style>
      .slideshow-container {
        position: relative;
        width: 100%;
        height: 300px;
      }

      .slide {
        display: none;
      }

      .slide img {
        width: 100%;
        height: 100%;
        margin-right:10px;
      }
      .span{
        font-size:14px;}
      .description {
        position: absolute;
        top: 0;
        left: 100%;
        margin-left: 10px; /* Adjust the margin as per your preference */
      }


      /* Navigation buttons */
      .carousel-prev,
      .carousel-next {
        position: absolute;
        top: 50%;
        color: #fff;
        font-size: 24px;
        cursor: pointer;
        z-index: 1;
        width: 30px;
        height: 30px;
        background-color: rgba(0, 0, 0, 0.5);
        text-align: center;
        line-height: 30px;
        border-radius: 50%;
      }

      .carousel-prev {
        left: 10px;
        transform: translateY(-50%);
      }

      .carousel-next {
        right: 10px;
        transform: translateY(-50%);

      }


    </style>
  </head>
  <body>
    <div class="slideshow-container">
      <div class="slide">
        <img src="image1.jpg" alt="Slide 1" alt="slidedesc">
        <span>image1</span>
      </div>


      <div class="slide">
        <img src="image2.jpg" alt="Slide 2" alt="slidedesc">
        <span>image2</span>

      </div>


      <div class="slide">
        <img src="image13.jpg" alt="Slide 3" alt="slidedesc">
        <span>image3</span>


      </div>

      <a class="carousel-prev" onclick="changeSlide(-1)">&#10094;</a>
      <a class="carousel-next" onclick="changeSlide(1)">&#10095;</a>
    </div>

    <script>
      var slideIndex = 0;
      var slides = document.getElementsByClassName("slide");
      var slidedesc = document.getElementsByClassName("slide-description");

      function showSlide(index) {
        if (index < 0) {
          slideIndex = slides.length - 1;
        } else if (index >= slides.length) {
          slideIndex = 0;
        }

        for (var i = 0; i < slides.length; i++) {
          slides[i].style.display = "none";
        }

        slides[slideIndex].style.display = "block";
        if (index < 0) {
          slideIndex = slidedesc.length - 1;
        } else if (index >= slidedesc.length) {
          slideIndex = 0;
        }

        for (var i = 0; i < slidedesc.length; i++) {
          slidedesc[i].style.display = "none";
        }

        slidedesc[slideIndex].style.display = "block";
      }

      function changeSlide(n) {
        slideIndex += n;
        showSlide(slideIndex);
      }

      // Show initial slide
      showSlide(slideIndex);
    </script>
  </body>
</html>
